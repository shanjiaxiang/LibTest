<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/C12" android:state_enabled="false" android:state_window_focused="false" />
    <item android:drawable="@color/C12" android:state_enabled="false" />
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/C2" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/C12" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>